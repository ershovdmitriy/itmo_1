<?xml version="1.0" encoding="UTF-8"?>
<!--
   jboss-web.xml - конфигурация развертывания для JBoss/WildFly
   Этот файл позволяет изменить контекст развертывания приложения
-->
<jboss-web xmlns="http://www.jboss.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee
           http://www.jboss.org/j2ee/schema/jboss-web_10_0.xsd"
           version="10.0">
    <!--
       context-root - устанавливает корневой путь приложения
       "/" - означает, что приложение будет доступно по корневому URL
    -->
    <context-root>/</context-root>
</jboss-web>